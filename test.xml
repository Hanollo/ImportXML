<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/edit_client_layout"
    android:background="@drawable/background_color">

    <!--Creates a toolbar at the top of the page-->
    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            >

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!--Builds a button to navigate to editing Medical Information-->
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_client_medical_button"
                    android:text="@string/edit_client_medical_button_text"
                    android:padding="8dp"
                    android:background="@drawable/mainpage_button"
                    android:layout_marginTop="36dp"/>

            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">

                <!--Builds a button to navigate to editing Dental Information-->
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_client_dental_button"
                    android:text="@string/edit_client_dental_button_text"
                    android:padding="8dp"
                    android:background="@drawable/mainpage_button"
                    android:layout_marginTop="36dp"/>

            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">

                <!--Builds a button to navigate to editing Vision Information-->
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_client_vision_button"
                    android:text="@string/edit_client_vision_button_text"
                    android:padding="8dp"
                    android:background="@drawable/mainpage_button"
                    android:layout_marginTop="36dp"/>

            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">

                <!--Builds a button to navigate to editing Client Information-->
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_client_information_button"
                    android:text="@string/edit_client_information_button_text"
                    android:padding="8dp"
                    android:background="@drawable/mainpage_button"
                    android:layout_marginTop="36dp"/>

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!--Builds a button to navigate to adding Medical Information-->
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/add_client_medical_button"
                    android:text="@string/edit_client_add_medical_button_text"
                    android:padding="8dp"
                    android:background="@drawable/mainpage_button"
                    android:layout_marginTop="36dp"/>

            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">

                <!--Builds a button to navigate to adding Dental Information-->
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/add_client_dental_button"
                    android:text="@string/edit_client_add_dental_button_text"
                    android:padding="8dp"
                    android:background="@drawable/mainpage_button"
                    android:layout_marginTop="36dp"/>

            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">

                <!--Builds a button to navigate to adding Vision Information-->
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/add_client_vision_button"
                    android:text="@string/edit_client_add_vision_button_text"
                    android:padding="8dp"
                    android:background="@drawable/mainpage_button"
                    android:layout_marginTop="36dp"/>

            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">

                <!--Builds a button to delete the currently selected user-->
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/delete_client_button"
                    android:text="@string/edit_client_delete_user_button_text"
                    android:padding="8dp"
                    android:layout_marginTop="36dp"
                    android:background="@drawable/mainpage_button"
                    />

            </TableRow>

        </TableLayout>

    </ScrollView>

</LinearLayout>