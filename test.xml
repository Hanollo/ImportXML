<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/dental_details_layout"
        android:background="@drawable/background_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--Textbox that displays the name of the employee-->
            <TextView
                android:id="@+id/employee_name_dental_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dental_details_null"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                />

            <!--Textbox that displays the name of the company-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/employer_dental_details"
                android:text="@string/dental_details_company"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                />

            <!--Textbox that displays the title for the dental details page-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/dental_details_coverage_title"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="24dp"
                android:textStyle="bold"
                android:shadowColor="@color/shadow_color"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="1.5"
                />

            <!--Textbox that displays Dental provider name-->
            <TextView
                android:id="@+id/dental_provider_details_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/dental_details_dental_provider"
                android:gravity="center_horizontal"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="16dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                />

            <!--Textbox that displays the Dental Group Number-->
            <TextView
                android:id="@+id/group_no_dental_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/dental_details_group_no"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                />

            <!--Textbox that displays the Dental provider customer service number-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/customer_service_no_dental_details"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:text="@string/dental_details_phone_num"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                />

            <!--Textbox that displays the covered dependents title-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dental_details_covered_dependents_title"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:shadowColor="@color/shadow_color"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="1.5"
                />

            <!--Textbox that displays the covered dependents-->
            <TextView
                android:id="@+id/list_of_covered_dental"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:text="@string/dental_details_covered_dependents_none"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                />

            <!--Textbox that displays the dental member costs title-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/dental_details_member_costs"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="24dp"
                android:textStyle="bold"
                android:shadowColor="@color/shadow_color"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="1.5"
                />

           

        </LinearLayout>

    </ScrollView>