            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--Builds an input box for Diagnostic PPO-->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/add_diagnostic_ppo_edit_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_marginTop="20dp">

                <EditText
                    android:id="@+id/add_diagnostic_ppo_edittext"
                    android:hint="@string/add_dental_diagnostic_ppo_hint"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </android.support.design.widget.TextInputLayout>

            <!--Builds an input box for Diagnostic Premier-->


            <android.support.design.widget.TextInputLayout
                android:id="@+id/add_diagnostic_premier_edit_layout"
