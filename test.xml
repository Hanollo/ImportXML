                android:id="@+id/add_diagnostic_non_participating_edit_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_marginTop="20dp">

                <EditText
                    android:id="@+id/add_diagnostic_non_participating_edittext"
                    android:hint="@string/add_dental_diagnostic_non_participating_hint"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </android.support.design.widget.TextInputLayout>

            <!--Builds an input box for Basic PPO-->
