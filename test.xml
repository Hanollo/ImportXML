<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.p2ux.samplescreenapp.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="106dp"
        android:layout_height="50dp"
        android:text="Sample Layout Centered Text"
        android:textSize="14sp"
        android:textColor="#3F51B5"
        android:gravity="center"
        android:shadowColor="#646464ff"
        android:shadowDx="1.2dp"
        android:shadowDy="1.2dp"
        android:shadowRadius="1.2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.501" />

    <Button
        android:id="@+id/button2"
        android:layout_width="156dp"
        android:layout_height="62dp"
        android:text="Button"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="163dp"
        android:layout_height="40dp"
        android:text="CheckBox"
        tools:layout_editor_absoluteY="78dp"
        tools:layout_editor_absoluteX="16dp" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="165dp"
        android:layout_height="32dp"
        android:text="RadioButton"
        tools:layout_editor_absoluteY="118dp"
        tools:layout_editor_absoluteX="16dp" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="90dp"
        android:layout_height="90dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="179dp" />

    <ProgressBar
        android:id="@+id/progressBar4"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="124dp"
        android:layout_height="21dp"
        tools:layout_editor_absoluteX="172dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="155dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="TextInput"
        tools:layout_editor_absoluteX="172dp"
        tools:layout_editor_absoluteY="38dp" />

    <WebView
        android:layout_width="148dp"
        android:layout_height="140dp"
        tools:layout_editor_absoluteX="179dp"
        tools:layout_editor_absoluteY="78dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="69dp"
        android:layout_height="59dp"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteY="308dp"
        tools:layout_editor_absoluteX="248dp" />

    <GridView
        android:layout_width="244dp"
        android:layout_height="187dp"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="308dp" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="101dp"
        android:layout_height="42dp"
        android:text="Switch"
        tools:layout_editor_absoluteX="248dp"
        tools:layout_editor_absoluteY="401dp" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="112dp"
        android:layout_height="30dp"
        tools:layout_editor_absoluteX="248dp"
        tools:layout_editor_absoluteY="443dp" />

</android.support.constraint.ConstraintLayout>
